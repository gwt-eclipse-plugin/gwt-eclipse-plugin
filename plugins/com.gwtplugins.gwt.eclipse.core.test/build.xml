<project name="com.google.gwt.eclipse.core.test" default="build" basedir=".">

    <!-- Project-specific properties -->
    <property name="plugin_name" value="com.google.gwt.eclipse.core.test" />
    <property name="host.plugin.name" value="com.google.gwt.eclipse.core" />

    <property name="project.tail" value="plugins/${plugin_name}" />

    <!-- No token replacements needed -->
    <filterset id="plugin.property.token.replace.filterset" />

    <path id="plugin.src">
        <pathelement location="${gwt.plugin.root}/plugins/com.google.gwt.eclipse.core/src" />
    </path>

    <property name="plugin.version" value="${gdt.version}" />

    <target name="build">
        <copy.plugin.src />
        <gwt.plugin.eclipseantrunner builddir="."
                                     buildfile="build.xml"
                                     buildtarget="buildInEclipse" />
    </target>

</project>
